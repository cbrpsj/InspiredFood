<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom style for radio buttons-->
    <style name="radio_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:buttonTint">@color/defaultBlack</item>
        <item name="android:textSize">12.5dp</item>
        <item name="android:onClick">mainButtonClicked</item>
    </style>

    <!-- Custom style for views in table row-->
    <style name="table_row_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/textColorListCellPreparation</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:textSize">17sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="small_button_style" parent="Widget.AppCompat.Button.Small">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
