<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundWhite"
    tools:context="pc.inspiredfood.RecipeListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:background="@color/backgroundBlue">

        <TextView
            android:id="@+id/inspiredfood_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/text_activity_headline"
            android:text="@string/app_name" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="24sp"
            android:background="@drawable/button_border_and_background"
            android:text="@string/add" />

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:background="@color/backgroundBlue">

        <RadioButton
            android:id="@+id/starters"
            android:text="@string/starters"
            style="@style/radio_button" />

        <RadioButton
            android:id="@+id/mains"
            android:text="@string/mains"
            style="@style/radio_button" />

        <RadioButton
            android:id="@+id/desserts"
            android:text="@string/desserts"
            style="@style/radio_button" />

        <RadioButton
            android:id="@+id/favourites"
            android:text="@string/favourites"
            style="@style/radio_button" />

        <RadioButton
            android:id="@+id/all"
            android:text="@string/all"
            style="@style/radio_button" />

    </RadioGroup>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
